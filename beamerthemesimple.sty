% light, dark and none style, light is default
\DeclareOptionBeamer{style}{
    \PassOptionsToPackage{style=#1}{beamercolorthemesimple}
    \PassOptionsToPackage{style=#1}{beamerinnerthemesimple}
    \PassOptionsToPackage{style=#1}{beamerouterthemesimple}
}
\ExecuteOptionsBeamer{style=light}
\ProcessOptionsBeamer

% Settings
% load other parts of theme
\useinnertheme{simple}	
\useoutertheme{simple}
\usecolortheme{simple}


\mode<all>